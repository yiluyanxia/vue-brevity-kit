{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["DOM", "DOM.Iterable", "ES2018"]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
